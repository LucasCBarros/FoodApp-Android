<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/receita_atual"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/marmita01"
        />

    <Button
        android:id="@+id/btn_saudavel"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:scaleType="center"
        android:text="+Saudavel"
        android:background="#70000000"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_light"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:padding="20dp"
        android:text="Feijoada"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="36sp"
        android:textStyle="bold"
        android:id="@+id/txt_titulo_receita"
        />



    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:scaleType="center"
        android:text="Back"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_light"
        android:background="#70000000"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="center"
        android:text="+ Caro"
        android:background="#70000000"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_light"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="center"
        android:text="+ Barato"
        android:background="#70000000"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_light"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:scaleType="center"
        android:text="+Gordo"
        android:id="@+id/btn_gordo"
        android:background="#70000000"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_light"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:text="+Simples"
        android:background="#70000000"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_light"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:text="+Gostoso"
        android:background="#70000000"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_light"/>

</RelativeLayout>